'use client';

import React, { useState } from 'react';
import { Link, useLocation } from 'react-router-dom';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Sheet, SheetContent, SheetTrigger } from '@/components/ui/sheet';
import { Menu, ShoppingCart } from 'lucide-react';
import { useCart } from '@/lib/store';
import CartSidebar from './CartSidebar';
import { motion, AnimatePresence } from 'framer-motion';
import { IMAGES, ROUTES } from '@/lib/constants';

type NavigationItem = {
  name: string;
  href: string;
};

const navigation: NavigationItem[] = [
  { name: "Inicio", href: ROUTES.HOME },
  { name: "Servicios", href: ROUTES.SERVICIOS },
  { name: "Café", href: ROUTES.CAFE },
  { name: "Mochilas", href: ROUTES.MOCHILAS },
  { name: "Contacto", href: ROUTES.CONTACTO },
];

export default function Header() {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isCartOpen, setIsCartOpen] = useState(false);
  const { getTotalItems } = useCart();
  const location = useLocation();

  React.useEffect(() => {
    window.scrollTo(0, 0);
  }, [location.pathname]);

  return (
    <header className="fixed top-0 left-0 right-0 z-50 bg-amber-950/90 backdrop-blur-md">
      <nav className="container mx-auto">
        <div className="flex items-center justify-between h-24 px-6 lg:px-8">
          <div className="flex-shrink-0 -ml-3">
            <Link to={ROUTES.HOME} className="block transition-opacity hover:opacity-90">
              <img src={IMAGES.LOGO} alt="CAFÉ FELICIDAD" className="h-16 w-auto" />
            </Link>
          </div>

          <div className="hidden md:flex flex-1 justify-center max-w-3xl mx-auto px-12">
            <nav className="flex items-center justify-center">
              {navigation.map((item) => (
                <Link
                  key={item.name}
                  to={item.href}
                  className={`relative px-6 py-2 text-[15px] font-medium tracking-wide transition-colors duration-200 ${
                    location.pathname === item.href ? 'text-amber-200' : 'text-white/90 hover:text-amber-200'
                  }`}
                >
                  {item.name}
                  {location.pathname === item.href && (
                    <motion.div 
                      layoutId="underline"
                      className="absolute left-3 right-3 bottom-0 h-0.5 bg-amber-200"
                      initial={false}
                    />
                  )}
                </Link>
              ))}
            </nav>
          </div>

          <div className="flex items-center space-x-6 mr-2">
            <Sheet open={isCartOpen} onOpenChange={setIsCartOpen}>
              <SheetTrigger asChild>
                <Button variant="ghost" size="icon" className="relative w-12 h-12 text-white hover:text-amber-200 transition-colors">
                  <ShoppingCart className="h-6 w-6" />
                  <AnimatePresence>
                    {getTotalItems() > 0 && (
                      <motion.div
                        initial={{ scale: 0 }}
                        animate={{ scale: 1 }}
                        exit={{ scale: 0 }}
                        className="absolute -top-1 -right-1"
                      >
                        <Badge variant="default" className="h-5 w-5 p-0 flex items-center justify-center rounded-full bg-amber-600">
                          {getTotalItems()}
                        </Badge>
                      </motion.div>
                    )}
                  </AnimatePresence>
                </Button>
              </SheetTrigger>
              <SheetContent className="w-[90vw] sm:w-[540px]">
                <CartSidebar onClose={() => setIsCartOpen(false)} />
              </SheetContent>
            </Sheet>

            <Sheet open={isMenuOpen} onOpenChange={setIsMenuOpen}>
              <SheetTrigger asChild>
                <Button 
                  variant="ghost"
                  size="icon"
                  className="md:hidden w-12 h-12 text-white hover:text-amber-200 transition-colors"
                >
                  <Menu className="h-6 w-6" />
                  <span className="sr-only">Abrir menú</span>
                </Button>
              </SheetTrigger>
              <SheetContent side="right" className="w-[80vw] sm:w-[400px]">
                <nav className="flex flex-col mt-8">
                  {navigation.map((item) => (
                    <Link
                      key={item.name}
                      to={item.href}
                      onClick={() => setIsMenuOpen(false)}
                      className={`py-4 px-6 text-lg font-medium tracking-wide transition-colors ${
                        location.pathname === item.href ? 'text-amber-600 bg-amber-50' : 'text-amber-900 hover:bg-amber-50/80'
                      }`}
                    >
                      {item.name}
                    </Link>
                  ))}
                </nav>
              </SheetContent>
            </Sheet>
          </div>
        </div>
      </nav>
    </header>
  );
}
